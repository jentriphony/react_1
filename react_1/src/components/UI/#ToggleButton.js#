const ToggleButton = dataProps => {



	let type = dataProps.buttonType
	let classes = dataProps.classes
	let title = dataProps.buttonTitle

	if(type === undefined) {
		type = 'button'
	}
	if(classes === undefined) {
		classes = ''
	}
	if(title === undefined) {
		title = 'submit'
	}


	return (

<button
 type={ type }
 className={ classes }
 onClick={ dataProps.onToggle(dataProps.toggleStatus) }
>
 { title }
</button>

	)



}



export default ToggleButton
